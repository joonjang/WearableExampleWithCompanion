<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WearableCompanion.MainPage">

    <StackLayout HorizontalOptions="CenterAndExpand">
        <Label Text="{Binding ConnectionString}"/>
        <Button Text="Close connection" Clicked="Button_Clicked_Close"/>

        <Entry Text="{Binding EntryString}" Placeholder="Enter message for watch"/>
        <Button Text="Send" Clicked="Button_Clicked_Send"/>

        <Label Text="{Binding FromWatch}"/>
        <Button Text="Refresh" Clicked="Button_Clicked_Refresh" VerticalOptions="EndAndExpand"/>
    </StackLayout>

</ContentPage>
